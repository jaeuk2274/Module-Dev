<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.jaeuk.hr_module.repository.employee.EmployeeMapper">

    <select id="selectEmployeeById" resultType="Employee">
        SELECT emp_id
             ,emp_name
             ,work_shift
        FROM Employee
        WHERE emp_id = #{prodId}
    </select>

    <select id="selectAllEmployees" resultType="Employee">
        SELECT emp_id
             ,emp_name
             ,work_shift
        FROM Employee
    </select>

    <insert id="insertEmployee" parameterType="Employee">
        INSERT INTO Employee (emp_name, work_shift)
        VALUES (#{empName}, #{workShift})
    </insert>

    <delete id="deleteEmployee" parameterType="Employee">
        DELETE Employee
        WHERE  1=1
        AND emp_id like #{empId}
    </delete>

</mapper>